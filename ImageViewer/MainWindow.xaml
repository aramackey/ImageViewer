        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Behaviors:WheelScale.IsEnabled="true" Behaviors:DragScroll.IsEnabled="true">
            <Image Behaviors:WheelScale.IsEnabled="true" Stretch="None" Margin="2" Source="Images/Lenna.png"/>
        </ScrollViewer>
    </Grid>
</Window>
